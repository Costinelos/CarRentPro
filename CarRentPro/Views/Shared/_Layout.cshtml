<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .navbar .profile-img {
            width: 32px;
            height: 32px;
            object-fit: cover;
            border: 2px solid rgba(255,255,255,0.3);
        }

        .dropdown-menu .profile-img {
            width: 64px;
            height: 64px;
            margin-bottom: 10px;
        }

        .user-bio-preview {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.85rem;
        }

        
        .badge-blacklist {
            background-color: #dc3545;
            color: white;
            font-size: 0.7em;
            padding: 2px 6px;
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-car"></i> CarRentPro
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                           
                            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                               
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Blacklist" asp-action="Index">
                                        <i class="fas fa-ban"></i> Blacklist
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Vehicle" asp-action="Create">
                                        <i class="fas fa-plus"></i> Add Cars
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Vehicle" asp-action="Index">
                                        <i class="fas fa-car"></i> Car Stocks
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Rental" asp-action="Index">
                                        <i class="fas fa-list"></i> Rented Cars
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Branch" asp-action="Index">
                                        <i class="fas fa-cog"></i> Admin Panel
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @{
                                        
                                        var userManager = Context.RequestServices.GetService<UserManager<ApplicationUser>>();
                                        var currentUser = await userManager.GetUserAsync(User);
                                        var profilePic = currentUser?.ProfilePicture ?? "default.png";
                                        var displayName = User.Identity.Name;
                                    }

                                   
                                    <img src="~/images/profile-pictures/@profilePic"
                                         class="profile-img rounded-circle me-2"
                                         alt="Profile">

                                    
                                    <span class="d-none d-sm-inline">@displayName</span>

                                    
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    }
                                    else if (User.IsInRole("Employee"))
                                    {
                                        <span class="badge bg-warning ms-1">Employee</span>
                                    }
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <div class="px-4 py-3 text-center">
                                            
                                            <img src="~/images/profile-pictures/@profilePic"
                                                 class="profile-img rounded-circle mb-2"
                                                 alt="Profile">
                                            <h6 class="mb-0">@displayName</h6>

                                            
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <span class="badge bg-danger">Administrator</span>
                                            }
                                            else if (User.IsInRole("Employee"))
                                            {
                                                <span class="badge bg-warning">Employee</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Customer</span>
                                            }

                                            
                                            @if (!string.IsNullOrEmpty(currentUser?.Biography))
                                            {
                                                <p class="text-muted user-bio-preview mb-0 mt-2"
                                                   title="@currentUser.Biography">
                                                    @currentUser.Biography
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="text-muted small mb-0 mt-2">No biography</p>
                                            }
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                   
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="fas fa-user-cog me-2"></i>Edit Profile
                                        </a>
                                    </li>

                                    
                                    <li>
                                        <a class="dropdown-item" asp-controller="Rental" asp-action="MyRentals">
                                            <i class="fas fa-car me-2"></i>My Rentals
                                        </a>
                                    </li>

                                    
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <li><hr class="dropdown-divider"></li>

                                        
                                        <li>
                                            <a class="dropdown-item" asp-controller="Blacklist" asp-action="Index">
                                                <i class="fas fa-ban me-2 text-danger"></i>Manage Blacklist
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item" asp-controller="Vehicle" asp-action="Create">
                                                <i class="fas fa-plus me-2"></i>Add Cars
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Vehicle" asp-action="Index">
                                                <i class="fas fa-car me-2"></i>Car Stocks
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Rental" asp-action="Index">
                                                <i class="fas fa-list me-2"></i>Rented Cars
                                            </a>
                                        </li>
                                    }

                                   
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Branch" asp-action="Index">
                                                <i class="fas fa-cog me-2"></i>Admin Panel
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="User" asp-action="Index">
                                                <i class="fas fa-users me-2"></i>Manage Users
                                            </a>
                                        </li>
                                    }

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Logout -->
                                    <li>
                                        <form class="form-inline px-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item btn btn-link p-0 text-start">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Logged Out State -->
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CarRentPro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>