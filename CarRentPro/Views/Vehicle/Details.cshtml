@model CarRentPro.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>@Model.Brand @Model.Model</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Brand @Model.Model"
                 onerror="this.onerror=null; this.src='/images/vehicles/default-car.jpg'">
        </div>
        <div class="col-md-6">
            <h3>Vehicle Information</h3>
            <table class="table">
                <tr>
                    <th>Brand:</th>
                    <td>@Model.Brand</td>
                </tr>
                <tr>
                    <th>Model:</th>
                    <td>@Model.Model</td>
                </tr>
                <tr>
                    <th>Year:</th>
                    <td>@Model.Year</td>
                </tr>
                <tr>
                    <th>Color:</th>
                    <td>@Model.Color</td>
                </tr>
                <tr>
                    <th>Price per Day:</th>
                    <td>$@Model.PricePerDay</td>
                </tr>
                <tr>
                    <th>Branch:</th>
                    <td>@Model.Branch.Name</td>
                </tr>
                <tr>
                    <th>Status:</th>
                    <td>
                        @if (Model.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rented</span>
                        }
                    </td>
                </tr>
            </table>

            <p><strong>Description:</strong> @Model.Description</p>

            <!-- SECȚIUNEA DE RENTAL -->
            <div class="mt-4">
                @if (User.Identity.IsAuthenticated)
                {
                    if (Model.IsAvailable)
                    {
                        <h4>Rent This Vehicle</h4>
                        <a href="@Url.Action("Rent", "Rental", new { id = Model.Id })" class="btn btn-primary btn-lg">
                            <i class="fas fa-car"></i> Rent Now
                        </a>
                        <p class="text-muted mt-2">Click "Rent Now" to proceed with the rental process.</p>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5>This vehicle is currently not available for rental.</h5>
                            <p>Please check back later or browse other available vehicles.</p>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <h5>Please login to rent this vehicle</h5>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary">Register</a>
                    </div>
                }
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>