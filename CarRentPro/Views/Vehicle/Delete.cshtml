@model CarRentPro.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
    var isAdmin = User.IsInRole("Admin");


    var forceDelete = ViewBag.ForceDelete != null && (bool)ViewBag.ForceDelete;
    var hasActiveRentals = ViewBag.HasActiveRentals != null && (bool)ViewBag.HasActiveRentals;
    var hasAnyRentals = ViewBag.HasAnyRentals != null && (bool)ViewBag.HasAnyRentals;
    var warningMessage = ViewBag.WarningMessage as string;
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Delete Vehicle</h1>

            @if (forceDelete)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>⚠️ FORCE DELETE WARNING</h4>
                    <p class="mb-0">@warningMessage</p>
                </div>
            }
            else if (hasActiveRentals)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Active Rentals Found</h4>
                    <p>This vehicle has active or future rental records.</p>
                    @if (isAdmin)
                    {
                        <hr>
                        <p class="mb-0"><strong>Admin option:</strong> You can use <a asp-action="ForceDelete" asp-route-id="@Model.Id" class="alert-link">Force Delete</a> to remove all records.</p>
                    }
                </div>
            }
            else if (hasAnyRentals)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <h4 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Past Rental History</h4>
                    <p>This vehicle has past rental records.</p>
                </div>
            }
            else
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h4 class="alert-heading"><i class="bi bi-trash3 me-2"></i>Confirm Deletion</h4>
                    <p>Are you sure you want to permanently delete this vehicle?</p>
                </div>
            }

            <!-- Vehicle Details Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Vehicle Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Brand @Model.Model" class="img-fluid rounded mb-3" style="max-height: 200px;">
                            }
                            else
                            {
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded mb-3" style="height: 200px;">
                                    <i class="bi bi-car-front" style="font-size: 3rem;"></i>
                                </div>
                            }
                            <div class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger") p-2">
                                @(Model.IsAvailable ? "Available" : "Unavailable")
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h4 class="text-primary">@Model.Brand @Model.Model</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Year:</dt>
                                <dd class="col-sm-8">@Model.Year</dd>

                                <dt class="col-sm-4">Color:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge" style="background-color: @Model.Color.ToLower(); color: white; padding: 4px 12px;">
                                        @Model.Color
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Price per Day:</dt>
                                <dd class="col-sm-8">
                                    <span class="fw-bold text-success">
                                        @string.Format("{0:F2}", Model.PricePerDay)
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Branch:</dt>
                                <dd class="col-sm-8">
                                    <i class="bi bi-geo-alt me-1"></i> @Model.Branch?.Name
                                </dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available for Rent</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Currently Unavailable</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@Model.Description</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Action Required</h5>
                </div>
                <div class="card-body">
                    @if (forceDelete)
                    {
                        <form asp-action="Delete" method="post" class="row g-3">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" name="forceDelete" value="true" />

                            <div class="col-12">
                                <button type="submit" class="btn btn-danger w-100"
                                       onclick="return confirm">
                                    <i class="bi bi-skull me-2"></i>
                                    CONFIRM FORCE DELETE
                                </button>
                                <small class="form-text text-muted">
                                    Irreversible action. All associated data will be lost.
                                </small>
                            </div>

                            <div class="col-12 mt-3">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Cancel
                                </a>
                            </div>
                        </form>
                    }
                    else if (hasActiveRentals)
                    {
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a asp-action="ToggleAvailability" asp-route-id="@Model.Id" class="btn btn-warning w-100">
                                    <i class="bi bi-slash-circle me-2"></i>
                                    Mark as Unavailable
                                </a>
                                <small class="form-text text-muted">
                                    Recommended: Prevents new rentals.
                                </small>
                            </div>

                            @if (isAdmin)
                            {
                                <div class="col-md-6">
                                    <a asp-action="ForceDelete" asp-route-id="@Model.Id" class="btn btn-danger w-100">
                                        <i class="bi bi-skull me-2"></i>
                                        Admin: Force Delete
                                    </a>
                                    <small class="form-text text-muted">
                                        Removes all records (use with caution).
                                    </small>
                                </div>
                            }

                            <div class="col-12 mt-3">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Back to List
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Delete" method="post" class="row g-3">
                            <input type="hidden" asp-for="Id" />

                            <div class="col-md-6">
                                <button type="submit" class="btn btn-danger w-100"
                                        onclick="return confirm('Are you sure you want to delete this vehicle?')">
                                    <i class="bi bi-trash3 me-2"></i>
                                    Delete Vehicle
                                </button>
                                <small class="form-text text-muted">
                                    @if (hasAnyRentals)
                                    {
                                        <span>Deletes vehicle and rental history.</span>
                                    }
                                    else
                                    {
                                        <span>Permanently removes vehicle.</span>
                                    }
                                </small>
                            </div>

                            <div class="col-md-6">
                                <a asp-action="ToggleAvailability" asp-route-id="@Model.Id" class="btn btn-warning w-100">
                                    <i class="bi bi-slash-circle me-2"></i>
                                    @(Model.IsAvailable ? "Mark as Unavailable" : "Mark as Available")
                                </a>
                                <small class="form-text text-muted">
                                    Alternative: Change availability.
                                </small>
                            </div>

                            <div class="col-12 mt-3">
                                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Cancel
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>
                                    Edit Instead
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>