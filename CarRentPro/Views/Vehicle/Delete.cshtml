@model CarRentPro.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Delete Vehicle</h1>

            <div class="alert alert-danger">
                <h4>Are you sure you want to delete this vehicle?</h4>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Brand @Model.Model</h5>
                    <p class="card-text">
                        <strong>Year:</strong> @Model.Year<br>
                        <strong>Color:</strong> @Model.Color<br>
                        <strong>Price per Day:</strong> $@Model.PricePerDay<br>
                        <strong>Branch:</strong> @Model.Branch.Name
                    </p>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>