@model IEnumerable<CarRentPro.Models.Branch>

@{
    ViewData["Title"] = "Branches";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Branches</h1>
            <div class="d-flex gap-2">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus"></i> Add New Branch
                </a>
                <a class="btn btn-danger" asp-controller="Blacklist" asp-action="Index">
                    <i class="fas fa-ban"></i> Manage Blacklist
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row">
        @foreach (var branch in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@branch.Name</h5>
                        <p class="card-text">
                            <strong>Address:</strong> @branch.Address<br>
                            <strong>Phone:</strong> @branch.PhoneNumber
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-end">
                            <a asp-action="Edit" asp-route-id="@branch.Id" class="btn btn-warning btn-sm me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@branch.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>