@model CarRentPro.Models.Branch

@{
    ViewData["Title"] = "Delete Branch";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Delete Branch</h1>

            <div class="alert alert-danger">
                <h4>Are you sure you want to delete this branch?</h4>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">
                        <strong>Address:</strong> @Model.Address<br>
                        <strong>Phone:</strong> @Model.PhoneNumber
                    </p>
                </div>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>