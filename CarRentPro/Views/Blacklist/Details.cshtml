@model BlacklistEntry

@{
    ViewData["Title"] = "Blacklist Entry Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-user-slash text-danger"></i> Blacklist Entry Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Customer Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Customer Info -->
                <div class="col-md-6">
                    <h5><i class="fas fa-user"></i> Customer Details</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Email:</th>
                            <td>@Model.User?.Email</td>
                        </tr>
                        <tr>
                            <th>Username:</th>
                            <td>@Model.User?.UserName</td>
                        </tr>
                        <tr>
                            <th>Phone:</th>
                            <td>@(string.IsNullOrEmpty(Model.User?.PhoneNumber) ? "Not provided" : Model.User.PhoneNumber)</td>
                        </tr>
                    </table>
                </div>

                <!-- Blacklist Info -->
                <div class="col-md-6">
                    <h5><i class="fas fa-ban"></i> Blacklist Details</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Status:</th>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-danger">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Inactive</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Added On:</th>
                            <td>@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Added By:</th>
                            <td>@Model.CreatedByAdminId</td>
                        </tr>
                        <tr>
                            <th>Expiration:</th>
                            <td>
                                @if (Model.ExpirationDate.HasValue)
                                {
                                    @Model.ExpirationDate.Value.ToLocalTime().ToString("dd/MM/yyyy")
                                    @if (Model.ExpirationDate.Value < DateTime.UtcNow)
                                    {
                                        <span class="badge bg-warning ms-2">Expired</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-dark">Permanent</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Reason -->
            <div class="mt-4">
                <h5><i class="fas fa-comment"></i> Reason for Blacklisting</h5>
                <div class="card bg-light">
                    <div class="card-body">
                        <p class="mb-0">@Model.Reason</p>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="mt-4 pt-3 border-top">
                <div class="d-flex justify-content-between">
                    <div>
                        @if (Model.IsActive)
                        {
                            <form asp-action="Remove" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-warning"
                                        onclick="return confirm('Remove @Model.User?.Email from blacklist?')">
                                    <i class="fas fa-user-check"></i> Remove from Blacklist
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">
                                <i class="fas fa-info-circle"></i> This blacklist entry is no longer active.
                            </span>
                        }
                    </div>

                    <div>
                        <a href="mailto:@Model.User?.Email" class="btn btn-outline-primary">
                            <i class="fas fa-envelope"></i> Contact Customer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>